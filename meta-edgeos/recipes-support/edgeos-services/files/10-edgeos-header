#!/bin/sh

# Colors
BLUE='\033[0;34m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

cat << "EOF"
     ++++++++++++++  ++++++++++++++            ++++++++++++++         +++++++++++++
  +++++++++++++++++  ++++++++++++++++        ++++++++++++++++      ++++++++++++++++
 ++++++++                      ++++++++    ++++++++               ++++++++         
++++++                            +++++    +++++                 ++++++            
+++++    ++++++++++                +++++  +++++    +++++++++    +++++     +++++++++
++++     ++++++++++                +++++  +++++    +++++++++++  +++++    ++++++++++
+++++    ++++++++++                +++++  +++++    ++++++++++++  ++++     +++++++++
++++++                            +++++    +++++           +++++ ++++++            
 ++++++++                      ++++++++    ++++++++       ++++++  ++++++++         
  +++++++++++++++++  ++++++++++++++++        ++++++++++++++++++    ++++++++++++++++
    +++++++++++++++  ++++++++++++++            ++++++++++++++        ++++++++++++++ 
EOF

echo "${GREEN}Welcome to EdgeOS${NC}"
echo "${BLUE}Secure Edge Computing Platform${NC}"
echo
echo "System Information:"
echo "* $(uname -sr)"
echo
echo "${YELLOW}System:${NC} $(cat /proc/version | cut -d' ' -f1-9)"
echo "${YELLOW}Build ID:${NC} $(cat /etc/edgeos-build-id)"
echo "${YELLOW}Last login:${NC} $(lastlog -u $USER | tail -1 | awk '{print $4,$5,$6,$7}')"
echo
