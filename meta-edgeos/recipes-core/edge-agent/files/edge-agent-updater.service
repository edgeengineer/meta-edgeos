[Unit]
Description=EdgeOS Agent Updater
Documentation=https://github.com/edgeengineer/edge-agent
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/opt/edgeos/bin/edge-agent-updater.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=edge-agent-updater

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectHome=true
ProtectSystem=strict
ReadWritePaths=/usr/local/bin /opt/edgeos/bin /var/lib/edge-agent /tmp

# Environment
EnvironmentFile=-/etc/default/edge-agent

[Install]
WantedBy=multi-user.target